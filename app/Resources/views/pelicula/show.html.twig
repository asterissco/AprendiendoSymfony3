{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pelicula</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pelicula.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ pelicula.nombre }}</td>
            </tr>
            <tr>
                <th>Anio</th>
                <td>{% if pelicula.anio %}{{ pelicula.anio|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pelicula_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pelicula_edit', { 'id': pelicula.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
