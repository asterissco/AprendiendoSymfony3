{% extends 'base.html.twig' %}

{% block body %}
    <h1>Actor</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ actor.nombre }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{% if actor.activo %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('actor_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('actor_edit', { 'id': actor.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
